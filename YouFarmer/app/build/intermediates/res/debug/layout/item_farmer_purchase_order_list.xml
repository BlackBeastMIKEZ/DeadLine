<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:id="@+id/info_avatar"
        android:src="@drawable/default_default_head"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="贝贝宝贝"
            android:id="@+id/info_name"
            android:layout_margin="5dp"
            android:textColor="@color/farmer_shop_list_firsttitle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_margin="5dp"
            android:text="求购：青菜"
            android:id="@+id/info_product"
            android:textColor="@color/farmer_shop_list_second_three_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="数量：360斤"
            android:id="@+id/info_num"
            android:textColor="@color/farmer_shop_list_second_three_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="位置：**省**市"
            android:id="@+id/info_location"
            android:layout_marginLeft="5dp"
            android:textColor="@color/farmer_shop_list_second_three_title"/>
    </LinearLayout>
    <ImageView
        android:layout_width="30dip"
        android:layout_height="30dip"
       android:layout_gravity="center_vertical"
        android:src="@drawable/message_more"
        android:id="@+id/message_more"/>
</LinearLayout><!-- From: file:/F:/quantabei/YouFarmer/app/src/main/res/layout/item_farmer_purchase_order_list.xml -->