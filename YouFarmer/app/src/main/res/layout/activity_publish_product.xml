<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/farmer_shop_list_back"
    android:id="@+id/layout_all">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/farmer_actionbar">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/farmer_back"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/base_bg"
            android:id="@+id/location_name"
            android:text="发布"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/course_info_red"
            android:textColor="@color/base_bg"
            android:padding="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:text="发     布"
            android:textSize="20sp"
            android:id="@+id/publish"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_above="@id/publish">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/farmer_info_selected"
                        android:text="图片:"
                        android:layout_gravity="center_vertical"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="20dp"
                        android:background="@drawable/edshape3">
                        <ImageView
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:id="@+id/product_avatar"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_centerInParent="true"
                            android:src="@drawable/plus_land_photo"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/farmer_info_selected"
                        android:text="名称"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="请输入15字以内"
                        android:gravity="left"
                        android:id="@+id/product_name"
                        android:textColorHint="@color/farmer_info_noselected"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/farmer_info_selected"
                        android:text="单价:"/>
                    <EditText
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:inputType="phone"
                        android:id="@+id/product_danjia"
                        android:layout_marginLeft="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/斤"
                        android:inputType="phone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/farmer_info_selected"
                        android:text="数量:"/>
                    <EditText
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:id="@+id/product_num"
                        android:gravity="left"
                        android:inputType="phone"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="斤 "
                        android:inputType="phone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/farmer_info_selected"
                        android:text="分类:"/>
                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:background="@drawable/edshape5"
                       android:id="@+id/tag1"
                       android:layout_marginLeft="5dp"
                       android:paddingRight="5dp">
                    <TextView
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:text="水果"
                        android:gravity="center"
                        android:padding="5dp"
                        android:id="@+id/tag1_content"

                        android:layout_marginLeft="5dp"/>
                       <ImageView
                           android:layout_width="10dip"
                           android:layout_height="10dip"
                           android:layout_toRightOf="@id/tag1_content"
                           android:src="@drawable/sort_more"
                           android:layout_centerInParent="true"
                           android:layout_marginLeft="5dp"

                           />
                   </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edshape5"
                        android:paddingRight="5dp"
                        android:id="@+id/tag2">
                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:text="浆果类"
                            android:gravity="center"
                            android:padding="5dp"
                            android:id="@+id/tag2_content"

                            android:layout_marginLeft="5dp"/>
                        <ImageView
                            android:layout_width="10dip"
                            android:layout_height="10dip"
                            android:layout_toRightOf="@id/tag2_content"
                            android:src="@drawable/sort_more"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/farmer_info_selected"
                        android:text="位置:"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广东省广州市"
                        android:id="@+id/product_location"
                        android:layout_marginLeft="10dp"
                        android:inputType="phone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/farmer_info_selected"
                        android:text="联系:"/>

                    <EditText
                        android:layout_width="150dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:inputType="phone"
                        android:gravity="left"
                        android:textColorHint="@color/farmer_info_noselected"
                        android:textSize="15sp"
                        android:id="@+id/product_tel"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/farmer_info_selected"
                        android:text="描述:"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="200dip"
                        android:background="@drawable/edshape3"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:id="@+id/product_desc"
                        android:textColorHint="@color/farmer_info_noselected"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>